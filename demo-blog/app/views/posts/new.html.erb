<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% if user_signed_in? %>
        <h1>Create Post</h1>
        <%= form_for(:post, url: { controller: 'posts', action: 'create' }, method: :post) do |form| %>
          <%= form.hidden_field :author, value: current_user %>

          <%= form.label :title, "Post Title" %>
          <%= form.text_field :title, class: "form-control", placeholder: "Enter your post title" %>

          <div class="mt-3">
            <%= form.label :text, "Your Post Text" %>
            <%= form.text_area :text, class: "form-control", rows: 5 %>
          </div>

          <%= form.submit 'Create Post', class: "btn btn-primary mt-4" %>
        <% end %>
      <% else %>
        <h1 class="text-center"> You must sign in to create a post <h1>
      <% end %>
    </div>
  </div>
</div>